# Copy to .env and modify as needed
# For LocalStack testing, defaults work out of the box

# AWS connection - set endpoint for LocalStack
AWS_ENDPOINT_URL=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# S3 bucket names
S3_IN_BUCKET=input-bucket
S3_OUT_BUCKET=output-bucket

# SQS queue names (URLs resolved at runtime)
SQS_REQ_QUEUE_NAME=request-queue
SQS_RESP_QUEUE_NAME=response-queue

# SQS behavior
SQS_MAX_RECEIVE_COUNT=5
SQS_VISIBILITY_TIMEOUT_SECONDS=60
SQS_WAIT_TIME_SECONDS=10

# API behavior
MAX_WAIT_SECONDS=30
POLL_INTERVAL_SECONDS=1
MAX_FILE_MB=8

